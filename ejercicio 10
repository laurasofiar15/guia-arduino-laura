 int ledrojo = 9;
 int ledverde = 10;
 int ledazul = 11;

void setup() {
  Serial.begin(9600);
  pinMode(ledrojo,OUTPUT);
  pinMode(ledverde,OUTPUT);
  pinMode(ledazul,OUTPUT);
}

void loop() {
  if (Serial.available() > 0) {
    char color = Serial.read();
    apagarLeds();
    
    else (color == 'r') {
      digitalWrite(ledRojo,HIGH);
    } else (color == 'v') {
      digitalWrite(ledVerde,HIGH);
    } else (color == 'a') {
      digitalWrite(ledAzul,HIGH);
